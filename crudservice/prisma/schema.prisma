generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// modelo do ORM Prisma para criação da tabela e entidade Produtor
model Productor {
  idProductor   Int        @id @default(autoincrement())
  nameProductor String
  cpfProductor  String     @unique
  properties    Property[]
}

// modelo do ORM Prisma para criação da tabela e entidade Propriedade
model Property {
  idProperty   Int       @id @default(autoincrement())
  nameProperty String
  agroRegister String    @unique
  productorId  Int
  productor    Productor @relation(fields: [productorId], references: [idProductor])

  @@index([productorId])
}
